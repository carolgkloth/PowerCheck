<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cadastro de Treino"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/text_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Imagem -->
            <ImageView
                android:id="@+id/image_item"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="Store Photo"
                android:scaleType="centerCrop"
                android:src="@android:drawable/gallery_thumb" />

            <!-- Botão selecionar imagem -->
            <Button
                android:id="@+id/button_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecionar Imagem"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"/>

            <!-- Endereço -->
            <EditText
                android:id="@+id/enderecoItemEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Local do treino"
                android:layout_marginTop="20dp" />

            <!-- Tipo do treino -->
            <EditText
                android:id="@+id/tipoTreinoEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Tipo de treino"
                android:layout_marginTop="12dp" />

            <!-- Data -->
            <EditText
                android:id="@+id/dataTreinoEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Data do treino (DD/MM/AAAA)"
                android:inputType="date"
                android:layout_marginTop="12dp" />

            <!-- Observações -->
            <EditText
                android:id="@+id/obsTreinoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="top"
                android:hint="Observações" />

            <!-- Recorde -->
            <EditText
                android:id="@+id/recordTreinoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Novo recorde ou marca do treino"
                android:layout_marginTop="12dp" />

            <!-- Botão salvar -->
            <Button
                android:id="@+id/salvarItemButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Treino"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>